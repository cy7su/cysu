# Основные настройки Flask
FLASK_ENV=production
FLASK_DEBUG=False
DEBUG=False

# Безопасность
SECRET_KEY=your-secret-key-here-generate-a-strong-random-key

# База данных
DATABASE_URL=sqlite:///app.db

# Загрузка файлов
UPLOAD_FOLDER=app/static/uploads
TICKET_FILES_FOLDER=app/static/ticket_files
MAX_CONTENT_LENGTH=10485760

# Настройки почты
MAIL_SERVER=smtp.your-provider.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@example.com

# Настройки YooKassa (платежи)
YOOKASSA_SHOP_ID=your-shop-id
YOOKASSA_SECRET_KEY=your-secret-key
YOOKASSA_TEST_MODE=True

# Цены подписки
SUBSCRIPTION_PRICE_1=89.00
SUBSCRIPTION_PRICE_3=199.00
SUBSCRIPTION_PRICE_6=349.00
SUBSCRIPTION_PRICE_12=469.00
SUBSCRIPTION_CURRENCY=RUB

# Логирование
LOG_FILE=logs/app.log
LOG_LEVEL=WARNING

# Дополнительные настройки безопасности
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600
SERVER_NAME=your-domain.com

# Telegram Bot
TG_TOKEN=your-telegram-bot-token
TG_ID=your-telegram-user-id